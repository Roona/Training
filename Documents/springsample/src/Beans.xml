<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

   <bean id="helloWorld" class="com.vijay.HelloWorld">
       <property name="message" value="Hello World!"/>
   </bean>
   
   <bean id="OutputHelper" class="com.vijay.OutputHelper">
		<property name="outputGenerator">
			<ref bean="CsvOutputGenerator" />
		</property>
	</bean>
	
<bean id="CsvOutputGenerator" class="com.vijay.CsvOutputGenerator" />
<bean id="JsonOutputGenerator" class="com.vijay.JsonOutputGenerator" />

</beans>